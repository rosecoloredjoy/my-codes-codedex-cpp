#include <iostream>

int main() {
  // Write code here
  int pin = 0;

  std::cout << "Bank of Codedex\n\n";

  std::cout << "Enter your PIN: ";
  std::cin >> pin;

  while (pin !=1234) {
    std::cout << "Incorrect PIN. Enter your PIN again: ";
    std::cin >> pin;
  }
  if (pin == 1234) {
    std::cout << "PIN accepted!";
  }
}
